{
  "openapi": "3.0.0",
  "info": {
    "title": "Treinamento backend nodejs",
    "description": "Treinamento RocketSeat",
    "version": "1.0.0",
    "contact": {
      "email": "wesleyysilva@yahoo.com.br"
    }
  },
  "paths": {
    "/users": {
      "post": {
        "tags": [
          "Users"
        ],
        "summary": "Create a new User",
        "description": "Create a new User",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "Create a User sample",
                  "email": "Email User"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Use already exists"
          }
        }
      },
      "get": {
        "tags": [
          "Users"
        ],
        "summary": "List all User",
        "description": "List all User If Admin",
        "parameters": [
          {
            "in": "header",
            "name": "user_id"
          }
        ],
        "responses": {
          "201": {
            "description": "Success"
          },
          "400": {
            "description": "Use not Found | User not Admin"
          }
        }
      }
    },
    "/users/{user_id}": {
      "get": {
        "tags": [
          "Users"
        ],
        "summary": "List profile of User",
        "description": "List profile User",
        "parameters": [
          {
            "in": "path",
            "name": "user_id"
          }
        ],
        "responses": {
          "201": {
            "description": "Success"
          },
          "404": {
            "description": "User not Exists."
          }
        }
      }
    },
    "/users/{user_id}/admin": {
      "patch": {
        "tags": [
          "Users"
        ],
        "summary": "Turn User Admin",
        "description": "Turn User Admin",
        "parameters": [
          {
            "in": "path",
            "name": "user_id"
          }
        ],
        "responses": {
          "201": {
            "description": "Success"
          },
          "404": {
            "description": "User not Exists."
          }
        }
      }
    }
  }
}